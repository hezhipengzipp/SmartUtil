<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_say"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:text="动态加载"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_add_iv"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="20dp"
        android:text="增加图片"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_say" />

    <Button
        android:id="@+id/bt_add_memory"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="20dp"
        android:text="打开内存泄露"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_add_iv" />

    <com.clife.smartutil.view.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_add_memory">

        <com.clife.smartutil.view.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.clife.smartutil.view.MyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.clife.smartutil.view.MyLinearLayout>
    </com.clife.smartutil.view.MyRelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>